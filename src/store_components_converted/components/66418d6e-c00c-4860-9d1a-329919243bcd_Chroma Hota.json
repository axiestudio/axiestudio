                "list": false,
                "show": true,
                "multiline": true,
                "value": "# from axiestudio.field_typing import Data\nfrom axiestudio.custom import Component\nfrom axiestudio.io import MessageTextInput, Output\nfrom axiestudio.schema import Data\nfrom langchain_chroma import Chroma\nfrom axiestudio.io import BoolInput, DataInput, DropdownInput, HandleInput, IntInput, StrInput, MultilineInput\n\nclass CustomComponent(Component):\n    display_name = \"Custom Component\"\n    description = \"Use as a template to create your own component.\"\n    documentation: str = \"http://docs.axiestudio.org/components/custom\"\n    icon = \"custom_components\"\n    name = \"CustomComponent\"\n\n    inputs = [\n        MultilineInput(\n            name=\"search_query\",\n            display_name=\"Search Query\",\n        ),\n        DataInput(\n            name=\"document_data\",\n            display_name=\"In Data\",\n            is_list=True,\n        ),\n        HandleInput(name=\"embedding\", display_name=\"Embedding\", input_types=[\"Embeddings\"]),\n\n        BoolInput(\n            name=\"allow_duplicates\",\n            display_name=\"Allow Duplicates\",\n            info=\"If false, will not add documents that are already in the Vector Store.\",\n        ),\n        IntInput(\n            name=\"number_of_results\",\n            display_name=\"Number of Results\",\n            info=\"Number of results to return.\",\n            value=5,\n        ),\n    ]\n\n    outputs = [\n        Output(display_name=\"Output\", name=\"output\", method=\"build_output\"),\n    ]\n    \n    def build_output(self) -> list[Data]:\n        docs = []\n        for i in range(len(self.document_data)):\n            docs.append(Document(\n                page_content=self.document_data[i].text\n            ))\n        \n        vector_store = Chroma.from_documents(documents=docs, embedding=self.embedding)\n        \n        docs_res = vector_store.similarity_search_by_vector(self.embedding.embed_query(self.search_query, output_dimensionality=1536), k=self.number_of_results)\n        \n        # Convert list documents to list Data\n        res = []\n        for doc in docs_res:\n            res.append(Data(text=doc.page_content))\n        \n        self.status = res\n        return res\n",
