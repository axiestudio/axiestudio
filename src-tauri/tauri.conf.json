{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "AxieStudio",
  "version": "1.5.0",
  "identifier": "com.axiestudio.app",
  "build": {
    "beforeDevCommand": "cd ../src/frontend && npm run start",
    "beforeBuildCommand": "cd ../src/frontend && npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../src/frontend/build"
  },
  "app": {
    "windows": [
      {
        "title": "AxieStudio",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: blob: http://localhost:* https://localhost:* ws://localhost:* wss://localhost:* http://127.0.0.1:* https://127.0.0.1:* ws://127.0.0.1:* wss://127.0.0.1:*; img-src 'self' data: blob: http: https:; media-src 'self' data: blob: http: https:; connect-src 'self' http: https: ws: wss:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "msi",
      "app",
      "dmg",
      "deb",
      "rpm",
      "appimage"
    ],
    "createUpdaterArtifacts": true,
    "publisher": "AxieStudio Team",
    "icon": [],
    "resources": [],
    "externalBin": [],
    "copyright": "Copyright Â© 2025 AxieStudio Team. All rights reserved.",
    "category": "DeveloperTool",
    "shortDescription": "AxieStudio - Visual AI Flow Builder",
    "longDescription": "AxieStudio is a powerful visual AI flow builder that allows you to create, manage, and deploy AI workflows with an intuitive drag-and-drop interface. Build complex AI applications without coding.",
    "homepage": "https://github.com/axiestudio/axiestudio",
    "licenseFile": "../LICENSE",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null,
      "hardenedRuntime": false
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US",
        "template": "main.wxs",
        "fragmentPaths": [],
        "componentGroupRefs": [],
        "componentRefs": [],
        "featureGroupRefs": [],
        "featureRefs": [],
        "mergeRefs": [],
        "enableElevatedUpdateTask": false,
        "bannerPath": "",
        "dialogImagePath": ""
      },
      "nsis": {
        "headerImage": "",
        "sidebarImage": "",

        "installMode": "perMachine",
        "languages": ["English"],
        "displayLanguageSelector": false,
        "customLanguageFiles": {},
        "template": null,
        "compression": "lzma"
      }
    }
  },
  "plugins": {}
}
